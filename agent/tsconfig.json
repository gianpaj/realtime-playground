{
  "include": ["./playground_agent.ts"],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "target": "ES2017",
    "module": "ES2022",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ESNext", "dom"] // Add "es2020" or a later version
  }
}
